<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.countrylearning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LearningActivity"
            android:label="Lessons" />
        <activity android:name=".activity.GotoQuizActivity"
            android:label="Go to quiz" />
        <activity android:name=".activity.QuizActivity"
            android:label="Quiz" />
        <activity android:name=".activity.GotoAnswersActivity"
            android:label="Go to answers" />
        <activity android:name=".activity.AnswersActivity"
            android:label="Answers" />
        <activity android:name=".activity.FinishActivity"
            android:label="Finish" />
    </application>

</manifest>